<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:id="@+id/mainLayout"
	android:layout_width="fill_parent" android:layout_height="fill_parent">

    <LinearLayout android:id="@+id/LinearLayout01"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:orientation="vertical">
    	<LinearLayout android:id="@+id/LinearLayout05"
		android:layout_height="2sp" android:layout_width="fill_parent"
		android:background="#888888">
	</LinearLayout>
	<LinearLayout android:orientation="vertical" 
		android:paddingTop="1.0dip" android:layout_width="fill_parent"
		android:background="#5B5B5B" android:layout_height="wrap_content"
		xmlns:android="http://schemas.android.com/apk/res/android">
		<LinearLayout android:orientation="horizontal"
			android:background="@drawable/toolbar_top_frame"
			android:layout_width="fill_parent" android:layout_height="7.0dip"
			android:layout_alignParentTop="true" />

		<HorizontalScrollView android:id="@+id/HorizontalScrollView01" 
			android:fadingEdgeLength="0.0dip" android:background="#5B5B5B"
			android:layout_width="fill_parent" android:scrollbars="none"
			android:layout_height="fill_parent">

			<LinearLayout
			    android:id="@+id/toolbar_items"
			    android:layout_width="wrap_content"
			    android:layout_height="58dp"
			    android:layout_gravity="center"
			    android:orientation="horizontal"
			    android:paddingBottom="7.0dip"
			    android:paddingTop="7.0dip" >

				<ImageView
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:src="@drawable/toolbar_slider_grip_left" />

				<LinearLayout android:layout_width="wrap_content"
					android:background="#ffffff" android:layout_height="wrap_content">
					<ImageButton android:id="@+id/paste" android:visibility="gone"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:scaleType="centerInside" android:background="@drawable/icon_toolbar_paste">
					</ImageButton>

					<LinearLayout android:paddingLeft="12.0dip"
						android:layout_height="wrap_content" android:layout_width="1sp"
						android:background="#000000">
					</LinearLayout>

					<ImageButton android:id="@+id/home"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:scaleType="centerInside" android:background="@drawable/icon_toolbar_home">
					</ImageButton>

					<LinearLayout android:layout_height="wrap_content"
						android:layout_width="1sp" android:background="#000000">
					</LinearLayout>

					<ImageButton android:id="@+id/upward"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:scaleType="centerInside" android:background="@drawable/icon_toolbar_upward">
					</ImageButton>


					<LinearLayout android:layout_height="wrap_content"
						android:layout_width="1sp" android:background="#000000">
					</LinearLayout>



					<ImageButton android:id="@+id/backward"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:scaleType="centerInside" android:background="@drawable/icon_toolbar_backward">
					</ImageButton>


					<LinearLayout android:layout_height="wrap_content"
						android:layout_width="1sp" android:background="#000000">
					</LinearLayout>

					<ImageButton android:id="@+id/forward"
						android:layout_width="wrap_content" android:layout_height="wrap_content" 
						android:scaleType="centerInside" android:background="@drawable/icon_toolbar_forward">
					</ImageButton>

					<LinearLayout android:layout_height="wrap_content"
						android:layout_width="1sp" android:background="#000000">
					</LinearLayout>

					<ImageButton android:id="@+id/refresh"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:scaleType="centerInside" android:background="@drawable/icon_toolbar_refresh">
					</ImageButton>

				</LinearLayout>
				<ImageView android:layout_width="wrap_content" 
					android:layout_height="wrap_content" android:src="@drawable/toolbar_slider_grip_right" />

			</LinearLayout>
		</HorizontalScrollView>
		<LinearLayout android:orientation="horizontal"
			android:background="@drawable/toolbar_bottom_frame"
			android:layout_width="fill_parent" android:layout_height="7.0dip"
			android:layout_alignParentTop="true" />
	</LinearLayout>
	<LinearLayout android:id="@+id/LinearLayout06"
		android:layout_height="2sp" android:layout_width="fill_parent"
		android:background="#888888">
	</LinearLayout>
    			</LinearLayout>
	    
	<ListView android:id="@id/android:list" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_weight="1"
		android:background="#FFFFFFFF" android:cacheColorHint="#00000000" />

	<TextView android:id="@id/android:empty" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:gravity="center"
		android:layout_weight="1" android:background="#FFFFFFFF"
		android:textColor="#000000" android:text="@string/emptydir" />

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
		android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:background="#FFFFFFFF" >
		<com.google.ads.AdView android:id="@+id/adView"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_gravity="center" 
			ads:adUnitId="@string/MY_AD_UNIT_ID" ads:adSize="BANNER"
			ads:testDevices="@string/TEST_DEVICE_ID" ads:loadAdOnCreate="true"  />
	</LinearLayout>

</LinearLayout>